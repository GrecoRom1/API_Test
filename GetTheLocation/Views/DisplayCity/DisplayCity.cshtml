@model BLL.City

@{
    ViewBag.Title = "DisplayCity";
}
<!DOCTYPE html>
<html>
<head>
    <title>Display City</title>
</head>
<body>
    <h3>@Model.Name (@Model.AdminArea.Country.Name)</h3>
    <ul class="list-group">
        <li class="list-group-item"><strong>Admin Area:</strong> @Model.AdminArea.Name </li>
        <li class="list-group-item"><strong>Country:</strong> @Model.AdminArea.Country.Name</li>
        <li class="list-group-item"><strong>Population:</strong> @Model.Population people</li>
        <li class="list-group-item"><strong>Latitude:</strong> @Model.Latitude.ToString()</li>
        <li class="list-group-item"><strong>Longitude:</strong> @Model.Longitude.ToString() </li>
    </ul>
    <br />

    <div class="mapouter">
        <div class="gmap_canvas">
            <iframe width="438" height="412" id="gmap_canvas"
                    src="https://maps.google.com/maps?q=@Model.Name&t=&z=12&ie=UTF8&iwloc=&output=embed" frameborder="0" scrolling="no" marginheight="0" marginwidth="0"></iframe>
            <a href="https://www.embedgooglemap.net"></a>
        </div>
        <style>
            .mapouter {
                text-align: right;
                height: 412px;
                width: 438px;
            }

            .gmap_canvas {
                overflow: hidden;
                background: none !important;
                height: 412px;
                width: 438px;
            }
        </style>
    </div>
</body>
</html>
